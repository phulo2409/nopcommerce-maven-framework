<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="NopCommerce Automation Testing">
    
    <listeners>
        <listener class-name="common.MethodListener"></listener>
        <listener class-name="utilities.AllureListener"></listener>
    </listeners>

    <parameter name="url" value="https://demo.nopcommerce.com/"/>

    <test name="Run on Edge" preserve-order="true">
        <parameter name="browser" value="edge"/>
        <classes>
            <class name="com.nopcommerce.common.Login"></class>
            <class name="com.nopcommerce.users.TM_07_Order" />
        </classes>
    </test>

</suite> <!-- Suite -->
